<!DOCTYPE html>
<html>
<head>
  <title>MusicianLink.io</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag href='../assets/css/bootstrap.css', type='text/css' %>
  <%= stylesheet_link_tag href='http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic', rel='stylesheet', type='text/css', media: 'all' %>
  <%= stylesheet_link_tag href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css', media: 'all' %>
  <%= stylesheet_link_tag href='../assets/css/creative.css', type='text/css' %>
  <%= stylesheet_link_tag href='../assets/css/animate.min.css', type='text/css' %>
  <%= stylesheet_link_tag href='../assets/css/animate.min.css', type='text/css' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag src="../javascripts/jquery.js", type="text/javascript" %>
  <%= javascript_include_tag src="../javascripts/classie.js", type="text/javascript" %>
  <%= javascript_include_tag src="../javascripts/creative.js", type="text/javascript" %>
  <%= javascript_include_tag src="../javascripts/bootstrap.js", type="text/javascript" %>
  <%= javascript_include_tag src="../javascripts/wow.min.js", type="text/javascript" %>
  <%= javascript_include_tag src="../javascripts/application.js", type="text/javascript" %>

  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %>
</head>

<body>
<nav class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to root_path, class: 'navbar-brand' do %>
        <i class="fa fa-music"> </i>
        MusicianLink.io
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="main-nav-collapse">
      <div class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm navbar-btn' %>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class: 'btn btn-primary btn-sm navbar-btn', method: :get %>

        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Community", users_path %></li>
          <li><%= link_to "My Account", edit_user_registration_path %></li>
        <% end %>
        <!--<li><%= link_to "About", about_path %></li>-->
        <li><%= link_to "Contact Us", new_contact_path %></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-#{key}" %>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
