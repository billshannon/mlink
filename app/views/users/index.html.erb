<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="about text-center">MusicianLink Community</h1>
    <h4 class="about text-center">Welcome to the MusicianLink community. Users must fill out a profile in order to be visible in the community.</h4>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
          <% if user.profile %>
              <li>
                <div class="well well-sm row <%= cycle('white-bg', '') %>">
                  <div class="col-sm-4 text-center">
                    <% if user.profile.avatar %>
                        <%= link_to user do %>
                            <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                        <% end %>
                    <% end %>
                  </div>

                  <div>
                    <%= link_to user do %>
                        <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                    <% end %>
                    <p>
                      <%= user.profile.job_title %>
                      <% if user.plan_id == 2 %>
                          <span class="label label-danger">PRO</span>
                      <% end %>
                    </p>
                  </div>
                </div>
              </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
