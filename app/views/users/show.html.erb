<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url(:medium), class: "user-show-avatar" %>
  </div>
  <div class="col-md-6">
    <h1 class="about"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>

    <h3 class="about text-center"><span class="job-title-icon"><%= %></span> <%= @user.profile.job_title %></h3>

    <div class="well profile-block profile-description text-center">
      <!--<h4 class="about text-center">Info / Bio</h4>-->
      <%= @user.profile.description %>
    </div>

    <% if current_user.plan_id == 2  %>
        <div class="well profile-block contact-info">
          <h3>Contact Info</h3>
          <%= @user.profile.phone_number %><br/>
          <%= @user.profile.contact_email %><br/>
        </div>
    <% end %>

  </div>
</div>
